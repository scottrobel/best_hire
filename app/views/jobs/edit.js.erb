$("#hidden-form-container").html("<%= j render 'jobs/edit', job: @job %>")
setTimeout(function(){
  $('.toggle-form')[0].classList.toggle('hidden-form')
}, 200)
$('.form-x-button').click(function(e){
  if(confirm("Are you sure you want to leave job before you save changes?")){
    closeForm()
  }
})
function closeForm(){
  $('.toggle-form')[0].classList.toggle('hidden-form')
  setTimeout(function(){
    $("#hidden-form-container").html('')
  }, 1000)
}
