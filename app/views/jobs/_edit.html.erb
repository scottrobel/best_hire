<% if job.errors.full_messages.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= job.errors.full_messages.first %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<div class="container">
    <div class="card card-container toggle-form hidden-form">
        <i class="fas fa-times x-icon fa-2x form-toggle-button form-x-button"></i>
        <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
        <h2 class="text-center pt-1">Edit Job</h2>
        <%= render 'jobs/form', job: job %>
    </div><!-- /card-container -->
</div><!-- /container -->
<%# render 'jobs/form_style' %>