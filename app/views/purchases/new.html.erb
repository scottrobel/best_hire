<%# render 'form', purchase: @purchase %>

<%# link_to 'Back', purchases_path %>
<div class="container">
      <div class="py-5 text-center">
        <h2>Checkout</h2>
      </div>

      <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">1</span>
          </h4>
          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="mt-0 mb-3"><%= @purchase.plan_type.capitalize %> Pack</h6>
                <%= render "purchases/plan_type_feature_checklists/#{@purchase.plan_type}" %>
              </div>
              <span class="text-muted"><%= @purchase.price.format %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Total (USD)</span>
              <strong><%= @purchase.price.format %></strong>
            </li>
          </ul>
        </div>
        <div class="col-md-8 order-md-1">
          <%= form_for @purchase, class: "needs-validation" do |f| %>            
            <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="mt-0 mb-3"><%= @purchase.plan_type.capitalize %> Pack</h6>
                <%= render "purchases/plan_type_feature_checklists/#{@purchase.plan_type}" %>
              </div>
              <span class="text-muted"><%= @purchase.price.format %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Total (USD)</span>
              <strong><%= @purchase.price.format %></strong>
            </li>
          </ul>
          <%= f.hidden_field :plan_type %>
          <hr class="mb-4">
            <%= f.submit "Continue to Checkout", class: "btn btn-primary btn-lg btn-block" %>
          <% end %>
        </div>
      </div>

      <footer class="my-5 pt-5 text-muted text-center text-small">
      
        <p class="mb-1">Â© 2017-2018 Company Name</p>
        <ul class="list-inline">
          <li class="list-inline-item"><a href="#">Privacy</a></li>
          <li class="list-inline-item"><a href="#">Terms</a></li>
          <li class="list-inline-item"><a href="#">Support</a></li>
        </ul>
      </footer>
    </div>